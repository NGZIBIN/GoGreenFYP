<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="480dp"
    android:layout_margin="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/successicon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/titleConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REDEMPTION SUCCESS"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/rewardImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/titleConfirm"
                android:layout_margin="30dp"
                android:src="@drawable/rookiebadge"/>

            <TextView
                android:id="@+id/rewardTitle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleConfirm"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"
                android:text="$5 Banana Centre eVoucher"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_below="@id/rewardImg"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_below="@id/rewardImg"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/titlePointsRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction No."
                android:layout_below="@id/titleQty"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/tvTransNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345677532"
                android:layout_below="@id/tvQuantity"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/titleBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Balance"
                android:layout_below="@id/titlePointsRequired"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvCurrentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500"
                android:layout_below="@id/tvTransNum"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:weightSum="2">

<!--                <Button-->
<!--                    android:id="@+id/btnNo"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_alignParentBottom="true"-->
<!--                    android:text="back to home"-->
<!--                    android:background="#EDEDED"/>-->

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:background="#6CAADB"
                    android:textColor="#fff" />





            </LinearLayout>








        </RelativeLayout>
    </LinearLayout>



</LinearLayout>